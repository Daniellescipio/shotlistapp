{
  "name": "shot-list-app",
  "private": true,
  "dependencies": {
    "axios": "^0.21.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "grommet": "^2.16.3",
    "grommet-icons": "^4.5.0",
    "moment": "^2.29.1",
    "mongoose": "^5.11.15",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.2",
    "styled-components": "^5.2.1",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "eslint": "^7.20.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-monorepo": "^0.3.2",
    "eslint-plugin-prettier": "^3.3.1",
    "faker": "^5.4.0",
    "husky": "^5.0.9",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.4",
    "mongo-seeding": "^3.5.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "prettier-stylelint": "^0.4.2",
    "stylelint": "^13.10.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-no-unsupported-browser-features": "^4.1.4",
    "stylelint-order": "^4.1.0",
    "stylelint-prettier": "^1.1.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": " lerna bootstrap && lerna run start --parallel",
    "prettier": "prettier --config .prettierrc.json --write \"**/*.{js,jsx}\"",
    "fix-styles": "prettier-stylelint --write \"**/*.{css,scss,less}\"",
    "prettier-docs": "prettier --config .prettierrc.json --write \"**/*.md\"",
    "lint": "eslint --cache \"**/*.{js,jsx}\""
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "yarn prettier",
      "eslint ."
    ],
    "*.{css,scss,less}": [
      "yarn fix-styles"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
